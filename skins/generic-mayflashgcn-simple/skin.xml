<?xml version="1.0" encoding="UTF-8"?>
<skin name="GameCube (via Mayflash) (Simple)" author="StarkNebula" type="generic">  
    <!-- Load Controller images - Menu name, file path + name, read in order -->
    <!-- Any new image/skin you make must have it's own entry in here! -->
    <background name="Black" image="GCN_Controllers\\GCN_NintendoSpy_Black_No_Frills.png" />

    <!-- Face buttons. No need to specify width/height unless you want to transform image size -->
    <button name="b0" image="GCN_Buttons\\A.png" x="473" y="138" />
    <button name="b1" image="GCN_Buttons\\B.png" x="416" y="189" />
    <button name="b2" image="GCN_Buttons\\X.png" x="558" y="127" />
    <button name="b3" image="GCN_Buttons\\Y.png" x="457" y="89" />
    <button name="b6" image="GCN_Buttons\\Z.png" x="584" y="50" />
  
    <button name="b7" image="GCN_Buttons\\Start.png" x="302" y="164" />

    <!-- L/R triggers and the pressure bar associated with them -->
    <button name="b4" image="GCN_Buttons\\L.png" x="58" y="16" />
    <analog name="s0" image="GCN_Buttons\\L-bar.png" x="40" y="4" direction="left" reverse="false" height="8"/>

    <button name="b5" image="GCN_Buttons\\R.png" x="468" y="16" />
    <analog name="s1" image="GCN_Buttons\\R-bar.png" x="440" y="4" direction="right" reverse="false" height="8" />

    <!-- D-Pad -->
    <button name="b11" image="GCN_Buttons\\Dpad-Up.png" x="202" y="276" />
    <button name="b10" image="GCN_Buttons\\Dpad-Down.png" x="202" y="336" />
    <button name="b8" image="GCN_Buttons\\Dpad-Left.png" x="172" y="306" />
    <button name="b9" image="GCN_Buttons\\Dpad-Right.png" x="232" y="306" />

    <!-- Analogue & C-Stick - xrange = how far the image moves from it's center point when tilted -->
    <stick xname="x" yname="y" image="GCN_Buttons\\Analogue-Stick.png"
            x="83" y="139" xrange="32" yrange="32" xreverse="false" yreverse="true" />
    <stick xname="z" yname="rz" image="GCN_Buttons\\C-Stick.png"
            x="395" y="291" xrange="30" yrange="30" xreverse="false" yreverse="true" />
</skin>